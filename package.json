{
  "name": "slidev-theme-kstm",
  "version": "0.1.0",
  "type": "module",
  "keywords": [
    "slidev-theme",
    "slidev"
  ],
  "engines": {
    "node": ">=18.0.0",
    "slidev": ">=0.19.3"
  },
  "scripts": {
    "build": "slidev build example.md",
    "dev": "slidev example.md --open",
    "export": "slidev export example.md",
    "screenshot": "slidev export example.md --format png"
  },
  "dependencies": {
    "@slidev/types": "^0.50.0-beta.2"
  },
  "devDependencies": {
    "@slidev/cli": "^0.50.0-beta.2"
  },
  "//": "Learn more: https://sli.dev/guide/write-theme.html",
  "slidev": {
    "colorSchema": "both",
    "highlighter": "Prism",
    "defaults": {
      "fonts": {
        "sans": "Roboto,Arial,Noto Sans Japanese",
        "mono": "Inconsolata,Consolas,Noto Sans Japanese",
        "weights": "400,700"
      }
    }
  }
}
